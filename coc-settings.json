{
	"languageserver": {
	  "ccls": {
	    "command": "ccls",
	    "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
	    "rootPatterns": ["compile_commands.json"],
	    "requireRootPattern": true,
	    "initializationOptions": {
	        "cache": {
	          "directory": "/tmp/ccls"
	        },
                "highlight": { "lsRanges" : true }
	      }
	  }
	}

}
